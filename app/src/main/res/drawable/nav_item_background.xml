<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when item is checked (selected) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color"/> <!-- Make sure @color/primary_color is defined -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- State when item is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- A slightly darker color for pressed state -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Default, non-pressed, non-checked state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Your default button background color -->
            <corners android:radius="4dp"/>
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Optional border -->
        </shape>
    </item>
</selector>
