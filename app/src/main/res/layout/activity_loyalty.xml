<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_loyalty"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.Material3.Light"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetStart="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loyalty &amp; Rewards"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/textViewSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Earn 1 point per â‚±100 spent"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/textViewNextDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Next booking discount: 0%"
                android:visibility="gone"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current Points"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/textViewCurrentPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Redeem points for discounts"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRedeem5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Redeem 50 pts for 5% off"
                android:textAllCaps="false"
                android:textSize="16sp"
                style="@style/Widget.SwiftCab.MaterialButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRedeem10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Redeem 100 pts for 10% off"
                android:textAllCaps="false"
                android:textSize="16sp"
                style="@style/Widget.SwiftCab.MaterialButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRedeem20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Redeem 200 pts for 20% off"
                android:textAllCaps="false"
                android:textSize="16sp"
                style="@style/Widget.SwiftCab.MaterialButton" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
