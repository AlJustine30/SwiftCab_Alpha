<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_driver_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context="com.btsi.SwiftCab.DriverDashboardActivity">

    <!-- Main Content Area -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_driver_dashboard"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Driver Dashboard" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_driver_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/status_offline"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textViewDriverWelcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Welcome,"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/switch_driver_status"
                app:layout_constraintBottom_toBottomOf="@id/switch_driver_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/switch_driver_status"/>

            <!-- New Booking Request Layout -->
            <LinearLayout
                android:id="@+id/booking_request_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#E0E0E0"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/textViewDriverWelcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_booking_request_title"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewPickupLocationInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/pickup_loading"/>

                <TextView
                    android:id="@+id/textViewDestinationLocationInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/destination_loading"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/buttonAcceptBooking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/accept_button"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp" />

                    <Button
                        android:id="@+id/buttonDeclineBooking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/decline_button"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Active Booking Details Layout -->
            <LinearLayout
                android:id="@+id/activeBookingLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#D0D0FF"
                android:visibility="gone"
                tools:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/booking_request_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textViewActiveBookingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/active_booking_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewActivePickupInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup: Loading..."
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textViewActiveDestinationInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination: Loading..."
                    android:layout_marginBottom="12dp"/>
                
                <TextView
                    android:id="@+id/textViewActiveRiderInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rider: Loading..."
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/buttonNavigateToPickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/navigate_to_pickup"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/buttonStartTrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_trip"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/buttonEndTrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/end_trip"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView_driver_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/activeBookingLayout"
                app:layout_constraintBottom_toTopOf="@id/button_view_map"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            -->

            <Button
                android:id="@+id/button_view_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="View Map / Navigate"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_driver"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_driver"
        app:menu="@menu/driver_nav_menu"
        app:itemBackground="@drawable/nav_item_background"
        app:itemTextColor="@color/nav_item_text_color_selector"
        app:itemIconTint="@color/nav_item_icon_tint_selector"
        app:itemShapeAppearanceOverlay="@style/ShapeAppearance.App.SmallComponent"
        app:itemPaddingTop="8dp"
        app:itemPaddingBottom="8dp" />

</androidx.drawerlayout.widget.DrawerLayout>
