<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBookingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/back_button_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back" />

    <!-- Top notification banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topNotificationBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="#303F9F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/textViewTopBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:text=""/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Collapsible header -->
            <LinearLayout
                android:id="@+id/bookingPanelHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/bookingPanelTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ride details"
                    style="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/buttonTogglePanel"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="4dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:contentDescription="Collapse panel" />
            </LinearLayout>

            <!-- Panel content container (collapsible) -->
            <LinearLayout
                android:id="@+id/bookingPanelContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Pickup Location Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                style="?attr/textAppearanceSubtitle2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPickupSearch"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search a place"
                    android:insetTop="8dp"
                    android:insetBottom="8dp"/>

                <ImageView
                    android:id="@+id/buttonCurrentLocationPickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location"
                    android:padding="8dp"
                    android:contentDescription="Set current location as pickup" />
            </LinearLayout>

            <EditText
                android:id="@+id/pickupLocationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selected pickup address"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"/>

            <!-- Destination Location Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop-off Location"
                android:layout_marginTop="8dp"
                style="?attr/textAppearanceSubtitle2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDestinationSearch"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search a place"
                    android:insetTop="8dp"
                    android:insetBottom="8dp"/>
                <ImageView
                    android:id="@+id/buttonCurrentLocationDropoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location"
                    android:padding="8dp"
                    android:contentDescription="Set current location as drop-off" />
            </LinearLayout>

            <EditText
                android:id="@+id/destinationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selected drop-off address"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/textViewEstimatedFare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated Fare: ₱0.00"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="6dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/textViewEstimatedFareNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimate may increase due to time to travel"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/discountCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/teal_700"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/textViewDiscountTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discount available"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/textViewDiscountPercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10% off your next ride"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonToggleDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
            android:text="Discount Disabled"
                        android:textAllCaps="false"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/discount_disabled_bg"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/modeSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/buttonSelectPickupMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Pickup Point"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/buttonSelectDropoffMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Drop-off Point"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonConfirmBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Booking"
                android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Booking Status Card (Shown when booking is accepted/in progress) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bookingStatusCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewBookingStatusHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_header_ride_confirmed"
                style="?attr/textAppearanceHeadline6"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <!-- Completed Trip Summary -->
            <TextView
                android:id="@+id/textViewFinalFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare: ₱0.00"
                android:textStyle="bold"
                android:textSize="22sp"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 0 min"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewFareBreakdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fare breakdown"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:id="@+id/textViewDriverNameStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver: Loading..."
                style="?attr/textAppearanceBody1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewDriverPhoneStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: Loading..."
                style="?attr/textAppearanceBody1"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewVehicleDetailsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: Loading..."
                style="?attr/textAppearanceBody1"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewDriverProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_driver_profile"
                android:contentDescription="Driver profile image" />

            <!-- Driver rating summary -->
            <LinearLayout
                android:id="@+id/driverRatingSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <RatingBar
                    android:id="@+id/driverAverageRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:progressTint="#FFC107"
                    android:secondaryProgressTint="#FFD54F"
                    android:progressBackgroundTint="#BDBDBD" />

                <TextView
                    android:id="@+id/textViewDriverRatingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    android:layout_marginStart="8dp"
                    style="?attr/textAppearanceBody2"/>
            </LinearLayout>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewAllDriverReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View all driver reviews"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                style="@style/Widget.SwiftCab.MaterialButton"/>
            
            <TextView
                android:id="@+id/textViewTripStatusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_message_driver_en_route"
                style="?attr/textAppearanceBody2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewInitialFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial fee: ₱0.00"
                style="?attr/textAppearanceBody2"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewTimeFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time fee (₱2/min): 0 min | ₱0.00"
                style="?attr/textAppearanceBody2"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewKmFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km fee (₱13.5/km): 0.00 km | ₱0.00"
                style="?attr/textAppearanceBody2"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textViewDiscountApplied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount: - ₱0.00"
                style="?attr/textAppearanceBody2"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/buttonCancelRideRider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel_ride"
                android:backgroundTint="@android:color/holo_red_light"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Finding Driver Overlay -->
    <LinearLayout
        android:id="@+id/findingDriverLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBarFindingDriver"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/textViewFindingDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Finding the nearest driver available for you..."
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSearchCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Time remaining: 05:00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonCancelWhileFinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel_ride"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_red_light"
            />

    </LinearLayout>

    <!-- Generic Progress Bar Overlay (for other waiting states) -->
    <ProgressBar
        android:id="@+id/progressBarWait"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone"/>

    <!-- No Drivers Available Overlay -->
    <LinearLayout
        android:id="@+id/noDriversLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#A0FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone">

        <TextView
            android:id="@+id/textViewNoDriversMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No drivers available right now."
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/buttonShowOnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK (Show Map)"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



