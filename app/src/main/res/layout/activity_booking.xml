<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBookingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/back_button_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pickup Location Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                style="?attr/textAppearanceSubtitle2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <fragment
                    android:id="@+id/pickup_autocomplete_fragment"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/buttonCurrentLocationPickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location"
                    android:padding="8dp"
                    android:contentDescription="Set current location as pickup" />
            </LinearLayout>

            <EditText
                android:id="@+id/pickupLocationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selected pickup address"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"/>

            <!-- Destination Location Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop-off Location"
                android:layout_marginTop="8dp"
                style="?attr/textAppearanceSubtitle2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <fragment
                    android:id="@+id/destination_autocomplete_fragment"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/buttonCurrentLocationDropoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location"
                    android:padding="8dp"
                    android:contentDescription="Set current location as drop-off" />
            </LinearLayout>

            <EditText
                android:id="@+id/destinationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selected drop-off address"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/modeSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/buttonSelectPickupMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Pickup Point"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/buttonSelectDropoffMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Drop-off Point"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonConfirmBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Booking"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Booking Status Card (Shown when booking is accepted/in progress) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bookingStatusCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewBookingStatusHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_header_ride_confirmed"
                style="?attr/textAppearanceHeadline6"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewDriverNameStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver: Loading..."
                style="?attr/textAppearanceBody1"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewDriverPhoneStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: Loading..."
                style="?attr/textAppearanceBody1"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewVehicleDetailsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: Loading..."
                style="?attr/textAppearanceBody1"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imageViewDriverProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_driver_profile"
                android:contentDescription="Driver profile image" />

            <!-- Driver rating summary -->
            <LinearLayout
                android:id="@+id/driverRatingSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <RatingBar
                    android:id="@+id/driverAverageRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/textViewDriverRatingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    android:layout_marginStart="8dp"
                    style="?attr/textAppearanceBody2"/>
            </LinearLayout>
            
            <Button
                android:id="@+id/buttonViewAllDriverReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View all driver reviews"
                android:layout_marginTop="8dp"/>
            
            <TextView
                android:id="@+id/textViewTripStatusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_message_driver_en_route"
                style="?attr/textAppearanceBody2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/buttonCancelRideRider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel_ride"
                android:backgroundTint="@android:color/holo_red_light"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Finding Driver Overlay -->
    <LinearLayout
        android:id="@+id/findingDriverLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBarFindingDriver"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/textViewFindingDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Finding the nearest driver available for you..."
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonCancelWhileFinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel_ride"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_red_light"
            />

    </LinearLayout>

    <!-- Generic Progress Bar Overlay (for other waiting states) -->
    <ProgressBar
        android:id="@+id/progressBarWait"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone"/>

    <!-- No Drivers Available Overlay -->
    <LinearLayout
        android:id="@+id/noDriversLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#A0FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone">

        <TextView
            android:id="@+id/textViewNoDriversMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No drivers available right now."
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/buttonShowOnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK (Show Map)"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
