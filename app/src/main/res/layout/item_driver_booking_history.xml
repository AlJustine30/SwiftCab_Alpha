<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDriverHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: Jan 01, 2024"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewDriverHistoryRiderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rider: Rider Name"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewDriverHistoryPickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="From: Pickup Address"
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewDriverHistoryDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="To: Destination Address"
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewDriverHistoryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status: COMPLETED"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black" />

        <RatingBar
            android:id="@+id/ratingBarDriverHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:visibility="gone"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFD54F"
            android:progressBackgroundTint="#BDBDBD" />

        <!-- You can add fare/price later if it's part of BookingRequest -->
        <TextView
            android:id="@+id/textViewDriverHistoryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone" 
            android:text="Fare: $0.00"
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewDriverHistoryDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:text="Discount: - â‚±0.00"
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
