<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textViewOfferPassenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger: "
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewOfferPickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pickup: "
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewOfferDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Destination: "
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewOfferDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Distance to pickup: -- km"
            android:textColor="#333333"
            android:fontFamily="sans-serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonOfferDecline"
                style="@style/Widget.SwiftCab.MaterialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonOfferAccept"
                style="@style/Widget.SwiftCab.MaterialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
