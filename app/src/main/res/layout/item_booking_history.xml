<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:text="Date: N/A" />

        <TextView
            android:id="@+id/textViewHistoryUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            android:text="Driver: N/A"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textViewHistoryPickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:text="From: N/A"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/textViewHistoryDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:text="To: N/A"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/textViewHistoryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textStyle="italic"
            android:text="Status: N/A"
            android:fontFamily="sans-serif" />

        <RatingBar
            android:id="@+id/ratingBarHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:visibility="gone"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFD54F"
            android:progressBackgroundTint="#BDBDBD" />

        <TextView
            android:id="@+id/textViewHistoryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fare: ₱0.00"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewHistoryDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Discount: - ₱0.00"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rate Driver"
            style="@style/Widget.SwiftCab.MaterialButton"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Report Issue"
            style="@style/Widget.SwiftCab.MaterialButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
